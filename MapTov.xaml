        <ControlTemplate x:Key="ClassButton1" TargetType="{x:Type Button}">

            <!-- Секция дня описания кнопки -->
            <!-- Наружная граница белая -->
            <Border BorderBrush="Yellow" Background="Yellow" BorderThickness="1,1,1,1" CornerRadius="8,8,8,8">
