            <ListView  Grid.Column="1"  Height="224" x:Name="ListRelatedInvalid2" Background="White" BorderBrush="White" SelectionChanged="BludoListInvalid_SelectionChanged" 
                          ScrollViewer.CanContentScroll="False"   ScrollViewer.HorizontalScrollBarVisibility="Hidden" Stylus.IsPressAndHoldEnabled="False"  
                          ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalAlignment="Bottom" ManipulationBoundaryFeedback="OnManipulationBoundaryFeedback" >
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListViewItem}">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel  Background="White"  Height="224" Width="250" VerticalAlignment="Bottom" Stylus.IsPressAndHoldEnabled="False" >
                            <Image x:Name="In" Width="35" Height="44" Source="pack://application:,,,/PreOrderWin;component/Images/iteminfo.png" HorizontalAlignment="Left" VerticalAlignment="Bottom" PreviewMouseLeftButtonDown="InfoTov_MouseLeftButtonDown" />
                            <TextBlock x:Name="Cena" FontSize="28" Width="55" Height="40" FontWeight="Bold" Text="{Binding Path=PriceTov}" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Margin="0,-35,40,0"/>
