        <Line x:Name="Cherta" Grid.Row="0" Stroke="Yellow" StrokeThickness="5" X1="0" Y1="415" X2="1080" Y2="415"  />
        <Label  x:Name="SetAdd" Content="ОБЕРІТЬ ДОДАТКОВО"  VerticalAlignment="Center" HorizontalAlignment="Center"  HorizontalContentAlignment="Center" FontWeight="Bold" FontFamily="dinpro-bold"   FontSize="26" Foreground="Black" Width="442" Margin="319,0,319,2" Height="38" Grid.Row="1"  />

        <Grid x:Name="Related2" Grid.Row="2"  >

            <Grid.ColumnDefinitions >



